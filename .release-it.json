{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "plugins": {
    "release-it-pnpm": {
      "pnpm": {
        "ci": true,
        "ignoreScripts": false,
        "preferOffline": true,
        "preferFrozenLockfile": true,
        "preferOfflineMirror": true,
        "useLockfile": true
      }
    },
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fix"
          },
          {
            "type": "ci",
            "section": "CI/CD"
          },
          {
            "type": "cd",
            "section": "CI/CD"
          },
          {
            "type": "chore",
            "section": "Chores"
          }
        ]
      }
    }
  },
  "npm": {
    "publish": false
  },
  "git": {
    "tagName": "v${version}",
    "push": true,
    "commit": true,
    "requireCleanWorkingDir": false
  }
}
