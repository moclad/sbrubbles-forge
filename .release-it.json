{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "plugins": {
    "release-it-pnpm": {
      "pnpm": {
        "ci": true,
        "ignoreScripts": false,
        "preferOffline": true,
        "preferFrozenLockfile": true,
        "preferOfflineMirror": true,
        "useLockfile": true
      }
    }
  },
  "npm": {
    "publish": false
  },
  "git": {
    "tagName": "v${version}",
    "push": true,
    "commit": true,
    "requireCleanWorkingDir": false
  }
}
